{
  "compilerOptions": {
    "outDir": "./",
    "target": "esNext",
    "module": "esNext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "lib": [ "esnext", "es2017", "dom" ],
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "importHelpers": true
  },
  "include": [
    "**/*.ts", 
  ],
  "exclude": [
    "demo/**/.ts"
  ]
}
