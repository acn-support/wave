{
  "name": "akc",
  "version": "0.0.1",
  "description": "АКС - высокоскоростной интернет и ИТ-услуги",
  "license": "MIT",
  "main": "index.html",
  "module": "elements/wave-elements.js",
  "scripts": {
    "build": "rimraf ../../static && rollup -c rollup.config.js",
    "start:build": "cd ../../static && es-dev-server --app-index index.html --port 8888",
    "dev": "npm run watch & npm run serve",
    "prepublishOnly": "npm run build",
    "serve": "es-dev-server --node-resolve --app-index index.html --port 8888",
    "serve:dist": "es-dev-server --app-index ./dist/index.html --open",
    "watch": "tsc-watch"
  },
  "files": [
    "src",
    "!lib/fixtures"
  ],
  "dependencies": {
    "lit-element": "^2.3.1",
    "lit-html": "^1.2.1",
    "tslib": "^2.0.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/preset-typescript": "^7.10.4",
    "@open-wc/building-rollup": "^1.4.2",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "@webcomponents/webcomponentsjs": "^2.4.3",
    "es-dev-server": "^1.56.1",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-lit": "^1.2.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-wc": "^1.2.0",
    "lint-staged": "^10.2.11",
    "lit-analyzer": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.21.0",
    "rollup-plugin-cpy": "^2.0.1",
    "rollup-plugin-typescript2": "^0.27.1",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "1.10.0",
    "tsc-watch": "^4.2.9",
    "typescript": "^3.9.6",
    "web-component-analyzer": "^1.1.5"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
